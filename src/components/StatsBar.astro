---
const stats = [
    { value: '30+', label: 'лет на рынке' },
    { value: '200+', label: 'клиентов' },
    { value: '98%', label: 'задач в срок' },
    { value: '24/7', label: 'поддержка' }
];
---

<section class="bg-section-alt section-padding !py-12">
    <div class="container-main">
        <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
            {stats.map((stat) => (
                <div class="text-center">
                    <div class="text-3xl font-bold text-primary-light sm:text-4xl">{stat.value}</div>
                    <div class="mt-1 text-sm font-medium text-muted-foreground sm:text-base">{stat.label}</div>
                </div>
            ))}
        </div>
    </div>
</section>
