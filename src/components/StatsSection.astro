---
import { translations, type Lang } from '../i18n/translations';
interface Props { lang?: Lang }
const { lang = 'uk' } = Astro.props;
const t = translations[lang].stats;
---

<section class="section-padding bg-[#EFF4FF]">
    <div class="container-main">
        <div class="grid grid-cols-2 gap-4 sm:gap-6 lg:grid-cols-4">

            <div class="stat-card group relative overflow-hidden rounded-3xl bg-[#1a3a6b] p-5 sm:p-8 lg:p-10 transition-all duration-400 hover:bg-[#2563eb] hover:scale-[1.05] hover:shadow-2xl">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="absolute top-6 right-6 opacity-30 transition-opacity duration-400 group-hover:opacity-100"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
                <div class="stat-item" style="transition-delay: 0ms">
                    <div class="font-mono text-[clamp(3.5rem,10vw,5rem)] font-black leading-none tracking-tight text-white tabular-nums">
                        <span data-count-target={t.items[0].value}>{t.items[0].value}</span><span class="text-[0.6em] text-[#2563eb] align-super group-hover:text-white/80 transition-colors duration-400">{t.items[0].suffix}</span>
                    </div>
                    <p class="mt-3 text-sm font-semibold uppercase tracking-[0.15em] text-white/60 group-hover:text-white/90 transition-colors duration-400">{t.items[0].label}</p>
                </div>
            </div>

            <div class="stat-card group relative overflow-hidden rounded-3xl bg-[#1a3a6b] p-5 sm:p-8 lg:p-10 transition-all duration-400 hover:bg-[#2563eb] hover:scale-[1.05] hover:shadow-2xl">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="absolute top-6 right-6 opacity-30 transition-opacity duration-400 group-hover:opacity-100"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                <div class="stat-item" style="transition-delay: 150ms">
                    <div class="font-mono text-[clamp(3.5rem,10vw,5rem)] font-black leading-none tracking-tight text-white tabular-nums">
                        <span data-count-target={t.items[1].value}>{t.items[1].value}</span><span class="text-[0.6em] text-[#2563eb] align-super group-hover:text-white/80 transition-colors duration-400">{t.items[1].suffix}</span>
                    </div>
                    <p class="mt-3 text-sm font-semibold uppercase tracking-[0.15em] text-white/60 group-hover:text-white/90 transition-colors duration-400">{t.items[1].label}</p>
                </div>
            </div>

            <div class="stat-card group relative overflow-hidden rounded-3xl bg-[#1a3a6b] p-5 sm:p-8 lg:p-10 transition-all duration-400 hover:bg-[#2563eb] hover:scale-[1.05] hover:shadow-2xl">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="absolute top-6 right-6 opacity-30 transition-opacity duration-400 group-hover:opacity-100"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                <div class="stat-item" style="transition-delay: 300ms">
                    <div class="font-mono text-[clamp(3.5rem,10vw,5rem)] font-black leading-none tracking-tight text-white tabular-nums">
                        <span data-count-target={t.items[2].value}>{t.items[2].value}</span><span class="text-[0.6em] text-[#2563eb] align-super group-hover:text-white/80 transition-colors duration-400">{t.items[2].suffix}</span>
                    </div>
                    <p class="mt-3 text-sm font-semibold uppercase tracking-[0.15em] text-white/60 group-hover:text-white/90 transition-colors duration-400">{t.items[2].label}</p>
                </div>
            </div>

            <div class="stat-card group relative overflow-hidden rounded-3xl bg-[#1a3a6b] p-5 sm:p-8 lg:p-10 transition-all duration-400 hover:bg-[#2563eb] hover:scale-[1.05] hover:shadow-2xl">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="absolute top-6 right-6 opacity-30 transition-opacity duration-400 group-hover:opacity-100"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                <div class="stat-item" style="transition-delay: 450ms">
                    <div class="font-mono text-[clamp(3.5rem,10vw,5rem)] font-black leading-none tracking-tight text-white tabular-nums">
                        <span data-count-target={t.items[3].value}>{t.items[3].value}</span><span class="text-[0.6em] text-[#2563eb] align-super group-hover:text-white/80 transition-colors duration-400">{t.items[3].suffix}</span>
                    </div>
                    <p class="mt-3 text-sm font-semibold uppercase tracking-[0.15em] text-white/60 group-hover:text-white/90 transition-colors duration-400">{t.items[3].label}</p>
                </div>
            </div>

        </div>

        <p class="mt-10 text-center text-xl italic text-[#1a3a6b]">
            {t.tagline}
        </p>
    </div>
</section>
