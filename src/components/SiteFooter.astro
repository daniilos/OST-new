---
const navGroups = [
    {
        title: 'Услуги',
        links: [
            { label: 'IT-аутсорсинг', href: '#services' },
            { label: 'Обслуживание серверов', href: '#services' },
            { label: 'Кибербезопасность', href: '#services' },
            { label: 'Облачные решения', href: '#services' }
        ]
    },
    {
        title: 'Компания',
        links: [
            { label: 'О нас', href: '#why-us' },
            { label: 'Тарифы', href: '#comparison' },
            { label: 'Отзывы', href: '#testimonials' },
            { label: 'Контакты', href: '#contact' }
        ]
    }
];
---

<footer class="border-t border-border bg-primary text-primary-content">
    <div class="container-main section-padding !py-12">
        <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-4">
            <!-- Logo & Description -->
            <div class="lg:col-span-2">
                <a href="/" class="mb-4 flex items-center gap-2 no-underline">
                    <div class="flex h-9 w-9 items-center justify-center rounded-lg bg-primary-content">
                        <span class="text-base font-bold text-primary">O</span>
                    </div>
                    <span class="text-xl font-bold tracking-tight text-primary-content">OST</span>
                </a>
                <p class="mt-3 max-w-sm text-sm leading-relaxed text-primary-content/70">
                    IT-аутсорсинг и поддержка для малого и среднего бизнеса. Работаем с 1995 года, обслуживаем более 200 компаний по всей Украине.
                </p>
                <!-- Social Icons -->
                <div class="mt-6 flex gap-3">
                    <a href="#" class="flex h-9 w-9 items-center justify-center rounded-lg bg-primary-content/10 text-primary-content/70 no-underline transition-colors hover:bg-primary-content/20 hover:text-primary-content" aria-label="Facebook">
                        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" /></svg>
                    </a>
                    <a href="#" class="flex h-9 w-9 items-center justify-center rounded-lg bg-primary-content/10 text-primary-content/70 no-underline transition-colors hover:bg-primary-content/20 hover:text-primary-content" aria-label="LinkedIn">
                        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" /></svg>
                    </a>
                    <a href="#" class="flex h-9 w-9 items-center justify-center rounded-lg bg-primary-content/10 text-primary-content/70 no-underline transition-colors hover:bg-primary-content/20 hover:text-primary-content" aria-label="Telegram">
                        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.479.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z" /></svg>
                    </a>
                </div>
            </div>

            <!-- Nav Groups -->
            {navGroups.map((group) => (
                <div>
                    <h4 class="mb-4 text-sm font-semibold uppercase tracking-wider text-primary-content/50">{group.title}</h4>
                    <ul class="flex flex-col gap-2.5">
                        {group.links.map((link) => (
                            <li>
                                <a href={link.href} class="text-sm text-primary-content/70 no-underline transition-colors hover:text-primary-content">
                                    {link.label}
                                </a>
                            </li>
                        ))}
                    </ul>
                </div>
            ))}
        </div>

        <div class="mt-10 border-t border-primary-content/10 pt-6">
            <p class="text-center text-xs text-primary-content/50">
                &copy; {new Date().getFullYear()} OST. Все права защищены.
            </p>
        </div>
    </div>
</footer>
