---
import { translations, type Lang } from '../i18n/translations';
interface Props { lang?: Lang }
const { lang = 'uk' } = Astro.props;
const t = translations[lang].footer;
---

<footer class="border-t border-[#dbe5ff] bg-[#1a3a6b] text-white">
    <div class="container-main section-padding !py-12">
        <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-4">
            <div class="lg:col-span-2">
                <a href={lang === 'en' ? '/en/' : '/'} class="mb-4 inline-block no-underline">
                    <img src="/images/ostnew1.png" alt="OST" class="h-9 w-auto brightness-0 invert" />
                </a>
                <p class="mt-3 max-w-sm text-sm leading-relaxed text-white/75">
                    {t.description}
                </p>
            </div>

            <div>
                <h4 class="mb-4 text-sm font-semibold uppercase tracking-wider text-white/55">{t.servicesTitle}</h4>
                <ul class="flex flex-col gap-1">
                    {t.servicesLinks.map((label) => (
                        <li>
                            <a href="#services" class="inline-block py-1.5 text-sm text-white/75 no-underline transition-all duration-200 hover:translate-x-1 hover:text-white">
                                {label}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            <div>
                <h4 class="mb-4 text-sm font-semibold uppercase tracking-wider text-white/55">{t.companyTitle}</h4>
                <ul class="flex flex-col gap-1">
                    {t.companyLinks.map((link) => (
                        <li>
                            <a href={link.href} class="inline-block py-1.5 text-sm text-white/75 no-underline transition-all duration-200 hover:translate-x-1 hover:text-white">
                                {link.label}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
        </div>

        <div class="mt-10 flex flex-col items-center gap-2 border-t border-white/15 pt-6 sm:flex-row sm:justify-between">
            <p class="text-sm text-white/55">
                &copy; 1995-{new Date().getFullYear()} {t.copyright}
            </p>
            <p class="text-sm text-white/45">
                {t.tagline}
            </p>
        </div>
    </div>
</footer>
