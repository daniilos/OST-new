---
import { translations, type Lang } from '../i18n/translations';
interface Props { lang?: Lang }
const { lang = 'uk' } = Astro.props;
const t = translations[lang].topBar;
---

<div class="bg-[#1a3a6b] text-white">
    <div class="container-main flex flex-wrap items-center justify-between gap-2 px-4 py-2.5 text-sm sm:px-6 lg:px-8">
        <div class="flex flex-wrap items-center gap-4 sm:gap-6">
            <a href="tel:+380442899541" class="no-underline text-white/90 transition-colors hover:text-white">
                {t.phone}
            </a>
            <a href="mailto:info@ost.kiev.ua" class="no-underline text-white/90 transition-colors hover:text-white">
                {t.email}
            </a>
        </div>
        <div class="text-white/80">{t.hours}</div>
    </div>
</div>
