---
const statsPreview = [
    { value: '30+', label: 'лет' },
    { value: '200+', label: 'клиентов' },
    { value: '98%', label: 'в срок' },
    { value: '24/7', label: 'поддержка' }
];

---

<section class="section-padding !pt-24 !pb-16 md:!pt-28 md:!pb-20 lg:!pt-32">
    <div class="container-main">
        <div class="mx-auto max-w-5xl text-center">
            <h1 class="text-balance text-[#1a3a6b]">IT-аутсорсинг для бизнеса</h1>
            <p class="mx-auto mt-5 max-w-3xl text-[clamp(1.2rem,2.3vw,1.75rem)] font-medium leading-[1.4] text-[#1a3a6b]/90">
                Берём на себя всё IT — 30+ лет опыта
            </p>

            <div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
                <a href="#contact" class="button-primary px-10 py-4 text-lg">Получить консультацию</a>
                <a href="#services" class="button-outline px-10 py-4 text-lg">Смотреть услуги</a>
            </div>

            <div class="mt-14 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
                {statsPreview.map((stat) => (
                    <div class="rounded-2xl border border-[#dbe5ff] bg-[#eff4ff] px-5 py-6">
                        <p class="font-mono text-4xl font-bold leading-none tracking-tight text-[#1a3a6b]">{stat.value}</p>
                        <p class="mt-2 text-base font-semibold text-[#1a3a6b]">{stat.label}</p>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>
